<nav id="patient-nav">
    <div id="logo-patient">
        <img src="https://res.cloudinary.com/dcbzfldni/image/upload/v1615282779/MyTherapy/nuage-beige_r5ahwj.png" alt="Nuage beige">
        <h1>My Therapy</h1>
    </div>
    <a href="/auth/patient/signout">Log out</a>
</nav>

<section id="all">
    <section id="left-bar">
        <div id="therapist">
            <h2>My Therapist:</h2>
            <img class="img-patient" src="{{patientInfo.myTherapist.photo}}"
                alt="{{patientInfo.myTherapist.name}} {{patientInfo.myTherapist.lastname}} picture">
            <p>{{patientInfo.myTherapist.name}} {{patientInfo.myTherapist.lastname}}</p>
        </div>
    </section>
    <section id="right-bar">
        <div id="head-infos">
            <div id="therapy">
                <h2>My Therapy:</h2>
                <p>{{patientInfo.myTherapy}}</p>
                <h2>My goals:</h2>
                <p>{{patientInfo.myGoals}}</p>
            </div> 
            <div id="account">
                <div id="bttns">
                    <a class="btn-patient-profile" href="/patient/edit-profile/{{patientInfo._id}}">Edit your profile<i class="fas fa-user-edit"></i></a>
                    <a class="btn-patient-profile" href="/patient/delete/{{patientInfo._id}}">Delete your profile<i class="fas fa-user-times"></i></a>
                </div>
                <img class="img-patient" src="{{patientInfo.photo}}"
                    alt="{{patientInfo.name}} {{patientInfo.lastname}} picture">
                <h2>{{patientInfo.name}} {{patientInfo.lastname}}</h2>
            </div>
        </div>
        <div id="main">
          <div id="document-manager">
            <div class="big-container manage-patients-wrapper">
              <h3 class="manage-patients-title">Your latest documents</h3>
              <table class="patients-manage-table">
                <thead>
                  <tr class="table-row">
                    <th class="table-head-patient">Type</th>
                    <th class="table-head-patient">Date</th>
                    <th class="table-head-patient">Title</th>
                    <th class="table-head-patient">Edit</th>
                    <th class="table-head-patient">Delete</th>
              
                  </tr>
                </thead>

                <tbody>
                  <tr class="table-row">
                    <td colspan="5">My texts</td>
                  </tr>
                  {{>patientManageDocuments patientInfo.myTexts}}
                  <tr class="table-row">
                    <td colspan="5">My loops</td>
                  </tr>
                  {{>patientManageDocuments patientInfo.myLoops}}
                </tbody> 
              </table>
          </div>
        </div>
            
        <a id="add-doc" href="/patient/add-doc"><i class="fas fa-plus"></i></a>
      </div>
    </section>
</section>
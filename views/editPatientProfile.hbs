<h2>Edit your profile</h2>

<form action="/patient/edit-profile/{{patientInfo._id}}" method="post">


<img src="{{patientInfo.photo}}" alt="Profile picture">

    <div>
        <label for="name">Name:</label>
        <input type="text" name="name" value="{{patientInfo.name}}">
    </div>

    <div>
        <label for="lastname">Lastname:</label>
        <input type="text" name="lastname" value="{{patientInfo.lastname}}">
    </div>
    
    <div>
        <label for="email">Email:</label>
        <input type="text" name="email" value="{{patientInfo.email}}">
    </div>

    <div>
        <label for="phoneNumber">Phone number:</label>
        <input type="text" name="phoneNumber" value="{{patientInfo.phoneNumber}}">
    </div>

    <div>
        <label for="address">Address:</label>
        <input type="text" name="address" value="{{patientInfo.location.address}}">
    </div>

    <div>
        <label for="zipcode">Zip code:</label>
        <input type="text" name="zipcode" value="{{patientInfo.location.zipcode}}">
    </div>

    <div>
        <label for="city">City:</label>
        <input type="text" name="city" value="{{patientInfo.location.city}}">
    </div>

    <div>
        <label for="myTherapist">My Therapist:</label>
        <select name="myTherapist" id="myTherapist">
          {{#each doctorsList}}
            <option value="{{this._id}}">{{this.name}} {{this.lastname}}</option>
          {{/each}} 
        </select>
    </div>

    <div>
        <label for="myTherapy">My Therapy:</label>
        <input type="text" name="myTherapy" value="{{patientInfo.myTherapy}}">
    </div>

    <div>
        <label for="myGoals">My goal(s):</label>
        <input type="text" name="myGoals" value="{{patientInfo.myGoals}}">
    </div>


<button type="submit">Save your changes</button>

</form>